<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.happyorange.boardgame.boardgame.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a game to begin."
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:id="@+id/textView" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/textView"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView">

            <ImageButton
                android:layout_width="185dp"
                android:layout_height="185dp"
                android:id="@+id/imageButton"
                android:background="@drawable/deuce" />

            <ImageButton
                android:layout_width="184dp"
                android:layout_height="184dp"
                android:id="@+id/imageButton2"
                android:background="@drawable/betrayal" />

            <ImageButton
                android:layout_width="184dp"
                android:layout_height="184dp"
                android:id="@+id/imageButton3"
                android:background="@drawable/mj" />

            <ImageButton
                android:layout_width="184dp"
                android:layout_height="184dp"
                android:id="@+id/imageButton4"
                android:background="@drawable/wizard" />

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scoreboard"></FrameLayout>


</RelativeLayout>
